---
import Layout from "../layouts/Layout.astro";
import Analytics from '@vercel/analytics/astro'

const GITHUB_TARGETS = [
    { user: "mlemors", repo: "mlemors-Astro" },
    { user: "mlemors", repo: "TimeTracker" },
    { user: "mlemors", repo: "TicketTracker" },
    { user: "mlemors", repo: "Fishing" },
    { user: "puemos", repo: "hls-downloader" }
];

const fetchRepoDetails = async (user: string, repo: string) => {
    try {
        const response = await fetch(
            `https://api.github.com/repos/${user}/${repo}`
        );
        if (!response.ok) {
            throw new Error(`Failed to fetch ${user}/${repo}`);
        }
        const data = await response.json();
        return {
            ...data,
            owner: {
                login: data.owner?.login || user,
                avatar_url: data.owner?.avatar_url || `https://github.com/${user}.png`
            }
        };
    } catch (error) {
        console.error(`Error fetching ${user}/${repo}:`, error);
        return {
            name: repo,
            html_url: `https://github.com/${user}/${repo}`,
            description: "Repository information temporarily unavailable",
            owner: {
                login: user,
                avatar_url: `https://github.com/${user}.png`
            },
            stargazers_count: 0,
            language: null
        };
    }
};

const projects = await Promise.all(
    GITHUB_TARGETS.map(({ user, repo }) => fetchRepoDetails(user, repo)),
);
---

